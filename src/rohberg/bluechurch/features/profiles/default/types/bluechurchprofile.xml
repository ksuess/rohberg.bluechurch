<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    name="bluechurchprofile"
    meta_type="Dexterity FTI"
    i18n:domain="plone">

  <!-- Basic properties -->
  <property
      i18n:translate=""
      name="title">BluechurchProfile</property>
  <property
      i18n:translate=""
      name="description">Artist oder Veranstalter</property>

  <property name="allow_discussion">False</property>
  <property name="factory">bluechurchprofile</property>
  <property name="icon_expr"></property>
  <property name="link_target"></property>

  <!-- Hierarchy control -->
  <property name="allowed_content_types"/>
  <property name="filter_content_types">True</property>
  <property name="global_allow">True</property>

  <!-- Schema, class and security -->
  <!-- <property name="add_permission">rohberg.bluechurch.features.AddBluechurchprofile</property> -->
  <property name="add_permission">cmf.AddPortalContent</property>
  <property name="klass">rohberg.bluechurch.features.content.bluechurchprofile.Bluechurchprofile</property>
  <property name="model_file">rohberg.bluechurch.features.content:bluechurchprofile.xml</property>
  <property name="model_source"></property>
  <property name="schema"></property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="false">
      <element value="plone.app.content.interfaces.INameFromTitle"/>
      <element value="plone.app.dexterity.behaviors.id.IShortName"/>
      <element value="plone.app.relationfield.behavior.IRelatedItems"/>
      <element value="plone.app.versioningbehavior.behaviors.IVersionable"/>
      <element value="plone.app.lockingbehavior.behaviors.ILocking"/>
      <element value="plone.app.contenttypes.behaviors.leadimage.ILeadImage"/>
  </property>

  <!-- View information -->
  <property name="add_view_expr">string:${folder_url}/++add++bluechurchprofile</property>
  <property name="default_view">bluechurchprofileview</property>
  <property name="default_view_fallback">False</property>
  <property name="immediate_view">view</property>
  <property name="view_methods">
    <element value="bluechurchprofileview"/>
    <element value="view"/>
  </property>

  <!-- Method aliases -->
  <alias
      from="(Default)"
      to="(dynamic view)"
  />
  <alias
      from="edit"
      to="@@edit"
  />
  <alias
      from="sharing"
      to="@@sharing"
  />
  <alias
      from="view"
      to="(selected layout)"
  />

  <!-- Actions -->
  <action
      action_id="view"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      title="View"
      url_expr="string:${object_url}"
      visible="True">
    <permission value="View"/>
  </action>
  <action
      action_id="edit"
      category="object"
      condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
      i18n:attributes="title"
      title="Edit"
      url_expr="string:${object_url}/edit"
      visible="True">
    <permission value="Modify portal content"/>
  </action>

</object>
